<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DistanceTracker.SettingsPage"
             Title="Settings">
    <Grid RowDefinitions="*, *, *, *">
        <Button Grid.Row="0" x:Name="SetupDistancesButton"
                            HeightRequest="60" FontSize="Large"
                            Text="Setup Distances" Margin="15, 5" CornerRadius="6"
                            HorizontalOptions="FillAndExpand"                            
                            BorderWidth="0" Clicked="SetupDistancesButton_Clicked" />

        <Button Grid.Row="1" x:Name="AddEventButton"
                            HeightRequest="60" FontSize="Large"
                            Text="Setup an Event" Margin="15, 5" CornerRadius="6"
                            HorizontalOptions="FillAndExpand"                            
                            BorderWidth="0" Clicked="AddEventButton_Clicked" 
                            Command="{Binding NavigateCommand}" CommandParameter="SetupEventPage"/>
    </Grid>
</ContentPage>